#compdef loc

_loc() {
  _arguments \
    '1: :_commands' \
    '*: :_files' \
    {-w,--which}'[print the command]: :_commands' \
    '(- *)'{-l,--list-commands}'[list available commands]: :->noop' \
    '(- *)'{-h,--help}'[show help message]: :->noop'
}

_commands() {
  cmds=($(loc -l))
  if [[ "${#cmds[@]}" != 0 ]]; then
    _values 'commands' "${cmds[@]}"
  fi
}
