# User specific aliases

# directory
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"
alias ..2="cd ../../"
alias ..3="cd ../../../"
alias p="pwd"
alias u="cd ../"
alias home="cd ~"

# ls
alias ls="ls --color=auto --group-directories-first"
alias -g ll="ls -alF --group-directories-first"
alias -g la="ls -A --group-directories-first"
alias -g l="ls -CF --group-directories-first"

# git
alias g="git"
alias ga="git add"
alias gd="git diff"
alias gs="git status"
alias gp="git push"
alias gpu="git pull"
alias gprune="git pull --prune"
alias gb="git branch"
alias gc="git commit -m"
alias gcf="git commit --fixup"
alias gca="git commit -am"
alias gamend="git commit --amend"
alias gch="git checkout"
alias gl="git log"
alias gf="git fetch"
alias gm="git merge"
alias gr="git reset"
alias gr:s="git reset --soft HEAD^"
alias gr:h="git reset --hard HEAD^"
alias gcl="git clone"

alias remote="gh repo view --web"

# edit
alias -g e="vim"

# system defaults
alias df="df -h"
alias fusermount="fusermount -u"
alias rimraf="rm -rf"
alias pulseaudiorestart="pulseaudio --check && pulseaudio --kill && pulseaudio --start"

# text format
alias last="last -w"
alias -g G="| grep --color=auto"
alias -g tail="tail -f"
alias -g JSON="| jq ."
alias -g L="| less"

# global utils
alias -g H="--help"

# yarn
alias ya="yarn"

# others
source ~/.alias_etc
