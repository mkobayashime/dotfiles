# User specific aliases

# directory
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"
alias ..2="cd ../../"
alias ..3="cd ../../../"
alias p="pwd"
alias u="cd ../"
alias home="cd ~"

# ls

alias ls="ls --color=auto"
alias ll="ls -alF"
alias la="ls -A"
alias l="ls -CF"

# git
alias g="git"
alias ga="git add"
alias gd="git diff"
alias gs="git status"
alias gp="git push"
alias gpu="git pull"
alias gb="git branch"
alias gc="git commit"
alias gch="git checkout"
alias gl="git log"
alias gf="git fetch"

# edit
alias e="vim"

# yarn
alias ya="yarn"

# others
source ~/.aliases_etc
